{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["src/cli.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
